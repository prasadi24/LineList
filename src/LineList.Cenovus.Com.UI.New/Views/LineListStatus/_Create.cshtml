@using LineList.Cenovus.Com.API.DataTransferObjects.LineListStatus
@model LineListStatusAddDto

<form asp-action="Create" id="lineListStatusForm" method="post">
    <div class="col-xl-12">
        <div class="nav-align-top mb-4">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-toggle="tooltip" data-placement="right" title="Details" data-bs-target="#lineliststatus-details" type="button" role="tab">
                        Details
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-toggle="tooltip" data-placement="right" title="Properties" data-bs-target="#audit-info" type="button" role="tab">
                        Properties
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Line List Status Details Tab -->
                <div class="tab-pane fade show active" id="lineliststatus-details" role="tabpanel">
                    <div class="row mb-1">
                        <label asp-for="Name" class="col-md-4 text-black">Name:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="Name" class="form-control text-uppercase flex-grow-1" style="max-width: calc(100% - 20px);" maxlength="20"/>
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="Description" class="col-md-4 text-black">Description:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="Description" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" maxlength="60"/>
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="Notes" class="col-md-4 text-black">Notes:</label>
                        <div class="col-md-8">
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="IsHardRevision" class="col-md-4 text-black">Is Hard Revision:</label>
                        <div class="col-md-8">
                            <input asp-for="IsHardRevision" type="checkbox" class="form-check-input" />
                            <span asp-validation-for="IsHardRevision" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Is Issued Of:</label>
                        <div class="col-md-8">
                            <select asp-for="IsIssuedOfId" class="form-select" asp-items="@(new SelectList(ViewBag.lineListStatuses, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Is Issued Of --</option>
                            </select>
                            <span asp-validation-for="IsIssuedOfId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Is Draft Of:</label>
                        <div class="col-md-8">
                            <select asp-for="IsDraftOfId" class="form-select" asp-items="@(new SelectList(ViewBag.lineListStatuses, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Is Draft Of --</option>
                            </select>
                            <span asp-validation-for="IsDraftOfId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Default Up-Rev Status:</label>
                        <div class="col-md-8">
                            <select asp-for="DefaultUpRevStatusId" class="form-select" asp-items="@(new SelectList(ViewBag.lineListStatuses, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Default Up-Rev Status --</option>
                            </select>
                            <span asp-validation-for="DefaultUpRevStatusId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Audit Info Tab -->
                <div class="tab-pane fade" id="audit-info" role="tabpanel">
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Created By:</label>
                        <div class="col-md-8">
                            <input asp-for="CreatedBy" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Created Date:</label>
                        <div class="col-md-8">
                            <input asp-for="CreatedOn" type="text" asp-format="{0:yyyy-MM-dd hh:mm:ss tt}" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Last Modified By:</label>
                        <div class="col-md-8">
                            <input asp-for="ModifiedBy" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Last Modified Date:</label>
                        <div class="col-md-8">
                            <input asp-for="ModifiedOn" type="text" asp-format="{0:yyyy-MM-dd hh:mm:ss tt}" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsActive" class="col-md-4 text-black">Active:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="IsActive" type="checkbox" checked class="form-check-input" />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="SortOrder" class="col-md-4 text-black">Sort Order:</label>
                        <div class="col-md-8">
                            <input asp-for="SortOrder" class="form-control" type="number" min="0" oninput="this.value = this.value < 0 ? 0 : this.value" onblur="if (this.value === '') { this.value = 0; $(this).valid(); }" />
                            <span asp-validation-for="SortOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div> <!-- End Audit Info Tab -->
            </div> <!-- End Tab Content -->
        </div>
        <div class="message red text-danger" id="validationMsgUnique" style="margin: 0px; visibility: hidden;
 display: none;">
            <span><b>Duplicate Name</b>: The value entered in the name field already exists!</span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btnSaveLineListStatus">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
