@using LineList.Cenovus.Com.API.DataTransferObjects.InsulationDefaultRow
@using LineList.Cenovus.Com.Domain.DataTransferObjects.InsulationDefaultRow
@model IEnumerable<InsulationRowDisplayDto>

<div class="mt-md-0">
    <div class="row">
        <div class="card mb-md-1">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-primary" id="btnCreateNewRow">
                        <i class="fas fa-plus"></i> Add New Row
                    </button>
                 
                </div>
            </div>
            <div class="table" style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd;">
                <table id="dataTableRow" class="table table-bordered">
                    <thead class="sticky-table-header">
                        <tr>
                            <th>Actions</th>
                            <th>@Html.DisplayNameFor(model => model.First().SizeNps)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id" data-insulationdefaultid="@item.InsulationDefaultId">
                                <td>
                                    <button class="btn btn-sm btn-outline-primary btn-update-nps" data-id="@item.Id">
                                        <i class="fas fa-file-import"></i>
                                    </button>
                                </td>
                                <td>@item.SizeNps</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="btnCancelEditRowColumn">Close</button>
    </div>
</div>
