@using LineList.Cenovus.Com.API.DataTransferObjects.InsulationDefault
@model InsulationDefaultEditDto

<form asp-action="Update" id="insulationDefaultForm" method="post">
    <div class="col-xl-12">
        <div class="nav-align-top mb-4">
            <!-- Tab Navigation -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-toggle="tooltip" data-placement="right" title="Details" data-bs-target="#insulation-details" type="button" role="tab">
                         Details
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-toggle="tooltip" data-placement="right" title="Properties" data-bs-target="#audit-info" type="button" role="tab">
                        Properties
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Insulation Default Details Tab -->
                <div class="tab-pane fade show active" id="insulation-details" role="tabpanel">
                    <div class="row mb-1">
                        <label asp-for="Name" class="col-md-4 text-black">Name:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="Name" class="form-control text-uppercase flex-grow-1" readonly style="max-width: calc(100% - 20px);" />
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="Description" class="col-md-4 text-black">Description:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="Description" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" />
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="LinkToDocument" class="col-md-4 text-black">Link:</label>
                        <div class="col-md-8">
                            <input asp-for="LinkToDocument" class="form-control" />
                            <span asp-validation-for="LinkToDocument" class="text-danger"></span>
                        </div>
                    </div>
                   
                  
                    <div class="row mb-1">
                        <label asp-for="Notes" class="col-md-4 text-black">Notes:</label>
                        <div class="col-md-8">
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Insulation Material:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <select asp-for="InsulationMaterialId" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" asp-items="@(new SelectList(ViewBag.InsulationMaterials, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Insulation Material --</option>
                            </select>
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="InsulationMaterialId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Insulation Type:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <select asp-for="InsulationTypeId" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" asp-items="@(new SelectList(ViewBag.InsulationTypes, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Insulation Type --</option>
                            </select>
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="InsulationTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Specification:</label>
                        <div class="col-md-8">
                            <!-- Display SpecificationName as plain text -->
                            <span class="form-control-plaintext">@Model.SpecificationName</span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Tracing Type:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <select asp-for="TracingTypeId" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" asp-items="@(new SelectList(ViewBag.TracingTypes, "Id", "Name_dash_Description"))">
                                <option value="">-- Select Tracing Type --</option>
                            </select>
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="TracingTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="SpecificationRevision" class="col-md-4 text-black">Specification Revision:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="SpecificationRevision" class="form-control flex-grow-1" style="max-width: calc(100% - 20px);" />
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="SpecificationRevision" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="SpecificationRevisionDate" class="col-md-4 text-black">Spec. Revision Date:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="SpecificationRevisionDate" class="form-control flex-grow-1" type="date" asp-format="{0:yyyy-MM-dd}" style="max-width: calc(100% - 20px);" />
                            <span class="text-danger ms-1" title="Required Field">*</span>
                        </div>
                        <div class="offset-md-4 col-md-8">
                            <span asp-validation-for="SpecificationRevisionDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Audit Info Tab -->
                <div class="tab-pane fade" id="audit-info" role="tabpanel">
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Record Id:</label>
                        <div class="col-md-8">
                            <input asp-for="Id" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Created By:</label>
                        <div class="col-md-8">
                            <input asp-for="CreatedBy" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Created Date:</label>
                        <div class="col-md-8">
                            <input asp-for="CreatedOn" type="text" asp-format="{0:yyyy-MM-dd hh:mm:ss tt}" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Last Modified By:</label>
                        <div class="col-md-8">
                            <input asp-for="ModifiedBy" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-md-4 text-black">Last Modified Date:</label>
                        <div class="col-md-8">
                            <input asp-for="ModifiedOn" type="text" asp-format="{0:yyyy-MM-dd hh:mm:ss tt}" class="form-control-plaintext" readonly />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="IsActive" class="col-md-4 text-black">Active:</label>
                        <div class="col-md-8 d-flex align-items-center">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label asp-for="SortOrder" class="col-md-4 text-black">Sort Order:</label>
                        <div class="col-md-8">
                            <input asp-for="SortOrder" class="form-control" type="number" min="0" oninput="this.value = this.value < 0 ? 0 : this.value" onblur="if (this.value === '') { this.value = 0; $(this).valid(); }" />
                            <span asp-validation-for="SortOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div> <!-- End Audit Info Tab -->
            </div> <!-- End Tab Content -->
        </div>
    </div>

    <div class="modal-footer">
         <button type="button" class="btn btn-danger btn-delete" data-id="@Model.Id" id="btnDelete" data-name="@Model.Name">Delete</button>
        <button type="submit" class="btn btn-primary" id="btnSaveInsulationDefault">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
